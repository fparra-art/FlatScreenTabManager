{
    "manifest_version": 3,
    "author": "Florian Parra",
    "version": "0.5",
    "name": "Flat Screen Tab Manager",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "permissions": [
        "tabs",
        "tabGroups",
        "scripting",
        "activeTab"
    ],
    "background": {
        "service_worker": "src/background.js"
    },
    "content_scripts": [
        {
            "js": [
                "src/content.js"
            ],
            "run_at": "document_idle",
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}